{% extends "/layouts/base.twig" %}

{% block welcome %}
<div class="baseline reveal">
	<div class="baseline-body reveal-1">
		<strong class="baseline-name">
			<span></span>
			{{post.get_field('welcome-title')}}</strong>
	</div>
	<span class="baseline-slogan reveal-2">{{post.get_field('welcome-subtitle')}}</span>
</div>

{% endblock %}


{% block main %}

<section class="home-section light">
	<div class="container-small">
		<div class="block">
			<div class="block-body reveal">
				<h2 class="title reveal-3">
                    <span>{{post.get_field('skills-title')}}</span>
                    {{post.get_field('skills-subtitle')}}
                </h2>
				<div class="reveal-4">
                    {{post.get_field('skills-text') | raw}}
				</div>
			</div>
		</div>
	</div>
</section>

<section class="work reveal" id="work">
	<div class="container">
		<h2 class="title reveal-1">
			<span>{{post.get_field('works-title')}}</span>
			{{post.get_field('works-subtitle')}}
		</h2>

		<div class="work-highlight reveal-2" id="work-highlight">
		{% for work in highlightedWorks %}

			{% include "parts/card.twig" %}

		{% endfor %}

		</div>
	</div>
</section>

<section class="cv-section light" id="about">
	<div class="container-small">
		<div class="block">
			<div class="block-body reveal">
				<h2 class="title reveal-1">
					<span>{{post.get_field('about-title')}}</span>
					{{post.get_field('about-subtitle')}}
				</h2>
				<div class="reveal-2">
					{{ post.get_field('about-text')|  trimextrabr | raw  | nl2br }}
				</div>
			</div>
		</div>
	</div>
</section>

    
{% endblock %}